{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "timezone": "Europe/Berlin",
  "labels": ["dependencies"],
  "rangeStrategy": "replace",
  "prHourlyLimit": 4,
  "prConcurrentLimit": 12,
  "dependencyDashboard": true,
  "semanticCommits": "enabled",
  "semanticCommitType": "deps",
  "semanticCommitScope": null,

  "schedule": ["before 8am on monday,tuesday,wednesday,thursday,friday"],

  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchPaths": ["apps/frontend/**", "apps/backend/**"],
      "groupName": "npm minor/patch",
      "matchUpdateTypes": ["minor", "patch"],
      "ignoreDeps": ["*eslint*", "*types*"],
      "labels": ["dependencies", "npm"],
      "automerge": true,
      "automergeType": "pr",
      "requiredStatusChecks": ["Smoke/smoke"]
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "labels": ["dependencies", "dev"],
      "automerge": true,
      "requiredStatusChecks": ["Smoke/smoke"]
    },
    {
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "major", "needs-review"],
      "automerge": false,
      "prPriority": 1
    },
    {
      "matchManagers": ["dockerfile"],
      "groupName": "docker base images",
      "labels": ["dependencies", "docker"],
      "schedule": ["before 8am on monday"],
      "automerge": false
    },
    {
      "matchManagers": ["github-actions"],
      "labels": ["dependencies", "gha"],
      "schedule": ["before 8am on monday"],
      "automerge": false
    },
    {
      "description": "Lockfile maintenance weekly",
      "matchManagers": ["npm"],
      "separateMajorMinor": false,
      "lockFileMaintenance": { "enabled": true, "schedule": ["before 7am on monday"] }
    }
  ]
}
