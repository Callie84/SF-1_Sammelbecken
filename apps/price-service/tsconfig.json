{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src/lib/**/*.ts",
    "src/scrapers/**/*.ts"
  ],
  "exclude": [
    "src/jobs/**/*",
    "src/routes/**/*",
    "src/utils/**/*",
    "src/middelware/**/*",
    "tests/**/*"
  ]
}
